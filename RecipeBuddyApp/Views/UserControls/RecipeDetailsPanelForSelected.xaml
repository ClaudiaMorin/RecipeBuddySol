    <StackPanel>
        <Grid x:Name="RecipeHeaderGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition x:Name="EditRowTypeAndAuthor" Height="{Binding TitleTypeAuthorHeight, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" >
                <Border Width="20"/>
                <TextBlock Text="Category :" TextAlignment="Left" FontSize="14"/>
                <Border Width="6"/>
                <TextBlock x:Name="TypeTextBlock" Text="{Binding Path=CurrentTypeString, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel x:Name="TypeAuthorRow" Orientation="Horizontal" Grid.Column="0" Grid.Row="1" >
                <Border Width="20"/>
                <TextBlock Text="Catagory :" TextAlignment="Left" FontSize="14"/>
                <Border Width="6"/>
                <ComboBox x:Name="TypesInComboBox" VerticalAlignment="Top" SelectedIndex="{Binding CurrentTypeFromCombo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Red">
                    <i:Interaction.Behaviors>
                        <icore:EventTriggerBehavior  EventName="SelectionChanged">
                            <icore:InvokeCommandAction x:Name="ICommandSelectTypeChanged" Command="{Binding CmdSelectedTypeChanged}" />
                        </icore:EventTriggerBehavior >
                    </i:Interaction.Behaviors>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column= "1" Grid.Row="0">
                <TextBlock Text="Author :" TextAlignment="Left" FontSize="14"/>
                <Border Width="6"/>
                <TextBlock x:Name="AuthorTextBlock" Text="{Binding Path=Author, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Border Width="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" >
                <TextBlock Text="Author :" TextAlignment="Left" FontSize="14"/>
                <Border Width="6"/>
                <TextBox x:Name="AuthorTextBox" Text="{Binding Path=AuthorEditString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Red" MaxLength="{Binding Path=AuthorMaxLength}"  />
                <Border Width="10"/>
            </StackPanel>
        </Grid>
        <Border BorderThickness="2" BorderBrush="DarkGray"/>
        <Grid x:Name="HeaderGrid" Background="LightSteelBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            <ComboBox x:Name="NumXComboBox" DataContext="{Binding ElementName=IngredQuant1BLK, Path=DataContext}" HorizontalContentAlignment="Center" SelectedIndex="{Binding ComboBoxIndexForRecipeMultiplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Grid.Row="0">
                    <ComboBoxItem Content=" 1X " Foreground="red"  IsSelected="True" HorizontalContentAlignment="Center"/>
                    <ComboBoxItem Content=" 2X " Foreground="red" HorizontalContentAlignment="Center" />
                    <ComboBoxItem Content=" 3X " Foreground="red" HorizontalContentAlignment="Center" />
                    <ComboBoxItem Content=" 4X " Foreground="red" HorizontalContentAlignment="Center" />
                    <ComboBoxItem Content=" 5X " Foreground="red" HorizontalContentAlignment="Center" />
                    <i:Interaction.Behaviors>
