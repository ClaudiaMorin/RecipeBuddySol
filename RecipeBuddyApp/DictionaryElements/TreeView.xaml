                <TextBlock VerticalAlignment="Center" Text="Appetizers"/>
            </StackPanel>
        </TreeViewItem>
    </DataTemplate>

    <DataTemplate x:Key="AppetizerTreeViewItem">
        <TreeViewItem ItemsSource="{Binding SavedAppetizerRecipes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <TextBlock Text="{Binding Path=Title}"/>
