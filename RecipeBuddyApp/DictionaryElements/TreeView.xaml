    <DataTemplate x:Key="TreeViewContextMenuAndCommand">
        <Button x:Name="TreeViewTitleBlock" Command="{Binding CmdMouseClick}" Background="LightSteelBlue" ToolTipService.ToolTip="{Binding Path=RecipeTitleTreeItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"  BorderBrush="Transparent" >
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=RecipeTitleTreeItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="NoWrap">
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="ContextMenuSelect" Text="+ Select List" Command="{Binding CmdAddToSelectList}"/>
                            <MenuFlyoutItem x:Name="ContextMenuEdit" Text="+ Edit!" Command="{Binding CmdAddToEdit}"/>
                            <MenuFlyoutItem x:Name="ContextMenuDelete" Text="- Delete!" Command="{Binding CmdDelete}"/>
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
            </TextBlock>
        </Button>
    </DataTemplate>




