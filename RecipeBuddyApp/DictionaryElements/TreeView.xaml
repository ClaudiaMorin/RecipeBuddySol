    <StackPanel Orientation="Horizontal" x:Key="MainCourseTV_DT">
        <TextBlock VerticalAlignment="Center" Text="Main Course"/>
        <Image Source="{StaticResource MealImage}" Height="30" />
    </StackPanel>


    <Style x:Key="TreeViewStyle" TargetType="TreeViewItem">
        <Setter Property="FontSize" Value="16"/>
        <!--<Setter Property="FocusVisualStyle" Value="{x:Null}"/>-->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="IsExpanded" Value="false"/>
    </Style>


